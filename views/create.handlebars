<div class="container create-form">
  <form action="/record/create" method="POST">
    <div class="form-group">
      <label for="expense"></label>
      <input type="text" class="form-control" id="expense" name="name" placeholder="支出項目">
    </div>
    <div class="form-group">
      <label for="date"></label>
      <input type="date" class="form-control" id="date" name="date" laceholder="日期">
    </div>
    <div class="form-group col-md-4">
      <label for="category"></label>
      <select id="category" class="form-control" name="category">
        <option>支出類別</option>
        <option>餐飲飲食</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>家居物業</option>
        <option>其他</option>
      </select>
    </div>
    <div class="form-group">
      <label for="amount"></label>
      <input type="text" class="form-control" id="amount" name="amount" placeholder="金額">
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-info">ENTER</button>
    </div>
  </form>

</div>