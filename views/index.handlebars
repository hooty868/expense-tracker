<nav class="navbar bg-none">
  <div class="container-fluid justify-content-center">
    <div class="row">
      <a class="mt-3 navbar-brand" href="/record/create"><img src="https://i.imgur.com/SlZ1LtR.png" alt=""
          width="120px"></a>
    </div>
  </div>
</nav>
<div class="container index-content">
  <div class="container total-amount">
    <div class="row justify-content-center">
      <div class="total-amount"
        style="{{#if aLittleAmount}}color:#FFC300 
;{{/if}}{{#if lessAmount}}color:#EB961C;{{/if}}{{#if mediumAmount}}color:#DB6D29;{{/if}}{{#if tooMuchAmount}}color:#B03118;{{/if}}">
        {{totalAmount}}
      </div>
    </div>
  </div>
  <div class="filter">
    <div class="filter-category">
      <form name="filter-month" method="GET" action="/record/category">
        <select class="form-control" id="filter-month" name="month" onchange="submit()">
          <option value="">月份</option>
          <option value="January">一月</option>
          <option value="February">二月</option>
          <option value="March">三月</option>
          <option value="April">四月</option>
          <option value="May">五月</option>
          <option value="June">六月</option>
          <option value="July">七月</option>
          <option value="August">八月</option>
          <option value="September">九月</option>
          <option value="October">十月</option>
          <option value="November">十一月</option>
          <option value="December">十二月</option>
        </select>
      </form>
    </div>
    <div class="filter-category">
      <form name="filter-category" method="GET" action="/record/category">
    </div>
    <div class="filter-category mb-4">
      <form name="filter-category" method="GET" action="/record/category">
        <select class="form-control" id="filter-category" name="filter" onchange="submit()">
          <option>{{filter}}</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="其他">其他</option>
          <option value="">全部支出</option>
        </select>
      </form>
    </div>
  </div>
  <div class="container mb-5 record-list">
    <div class="row">
      {{#each record}}
      <div class="col-2"></div>
      <div class="col-8">
        <li class="list-group-item" data-id="{{@index}}" style="">
          <div class="row justify-content-between align-items-center">
            <div class="row">
              <div class="category-icon">{{{this.icon}}}</div>
              <div>
                <h5 class="ml-2 list-name">{{this.name}}</h5>
                <h6 class="ml-2 list-date">{{this.date}}</h6>
              </div>
            </div class="amount">
            <h5 class="mr-2 list-amount"> {{this.amount}}</h5>
          </div>
        </li>
      </div>
      <div class="col-2 edit-btn-group">
        <div class="row align-items-center">
          <form action="/record/{{this._id}}" method="GET">
            <button type="submit" class="edit-btn" style="display: inline;">
              <i class="fas fa-pen-square"></i>
            </button>
          </form>
          <form action="/record/{{this._id}}?_method=DELETE" method="POST" onsubmit="return confirm('確定要刪除嗎？')">
            <button type="submit" class="edit-btn">
              <i class="fas fa-minus-square"></i>
            </button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <footer>
    <div class="footer pb-5">
      <div class="row">
        <a href="https://github.com/schiafang"><img src="https://i.imgur.com/frLUCiN.png" style="opacity: 80%;"></a>
      </div>
    </div>
  </footer>