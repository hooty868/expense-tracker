<nav class="navbar bg-none container">
  <div class="row justify-content-center sl">
    <a class="mt-3 navbar-brand" href="/"><img src="/image/logo2_green.png" alt="" width="120px"></a>
  </div>
</nav>
<div class="container create-form">
  <form action="/record/{{record._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <input type="text" class="form-control" id="expense" name="name" autocomplete="off" maxlength="12"
        value="{{record.name}}" required>
      </select>
    </div>
    <div class="form-group">
      <input type="date" class="form-control" id="date" name="date" placeholder="日期" value="{{record.date}}"
        autocomplete="on" required>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" id="merchant" name="merchant" placeholder="商家" autocomplete="off"
        value="{{record.merchant}}" maxlength="12" required>
    </div>
    <div class="form-group">
      <select id="new-category" class="form-control" name="category" required>
        <option>{{record.category}}</option>
        <option>餐飲食品</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>家居物業</option>
        <option>其他</option>
      </select>
    </div>

    <div class="form-group">
      <input type="text" class="form-control" id="amount" name="amount" placeholder="金額" value="{{record.amount}}"
        required>
    </div>
    <div class="form-group row justify-content-center">
      <button type="submit" class="btn mt-3" style="background-color: transparent;"><i class="fas fa-pencil-alt fa-2x"
          style="color: rgb(203, 210, 72);"></i></button>
    </div>
  </form>
</div>